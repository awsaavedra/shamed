<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/home_dest">
    <fragment
        android:id="@+id/home_dest"
        android:name="com.example.shamed.ui.main.MainFragment"
        android:label="@string/main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_home_dest_to_fragment_signup2"
            app:destination="@id/fragment_signup" />
    </fragment>

    <fragment
        android:id="@id/fragment_signin"
        android:name="com.example.shamed.ui.main.MainFragment"
        tools:layout="@layout/fragment_signin">
        <argument
            android:name="flowStepNumber"
            app:argType="integer"
            android:defaultValue="1"/>

    </fragment>
    <fragment
        android:id="@+id/fragment_signup"
        android:name="com.example.shamed.ui.main.MainFragment"
        tools:layout="@layout/fragment_signup">
        <argument
            android:name="flowStepNumber"
            android:defaultValue="1"
            app:argType="integer" />

        <action
            android:id="@+id/action_fragment_signup_to_avatar"
            app:destination="@+id/fragment_avatar" />
    </fragment>
    <fragment
        android:id="@id/fragment_avatar"
        android:name="com.example.shamed.ui.main.MainFragment"
        tools:layout="@layout/fragment_avatar">
        <argument
            android:name="flowStepNumber"
            android:defaultValue="1"
            app:argType="integer" />

        <action
            android:id="@+id/action_flow_step_one_dest3_to_flow_step_one_dest4"
            app:destination="@+id/fragment_goals" />
    </fragment>
    <fragment
        android:id="@id/fragment_goals"
        android:name="com.example.shamed.ui.main.MainFragment"
        tools:layout="@layout/fragment_goals">
        <argument
            android:name="flowStepNumber"
            android:defaultValue="1"
            app:argType="integer" />

        <action
            android:id="@+id/action_fragment_goals_to_fragment_goals2"
            app:destination="@id/fragment_goals2" />
    </fragment>
    <fragment
        android:id="@+id/fragment_goals2"
        android:name="com.example.shamed.ui.main.MainFragment"
        tools:layout="@layout/fragment_goals">
        <argument
            android:name="flowStepNumber"
            android:defaultValue="1"
            app:argType="integer" />

        <action
            android:id="@+id/next_action"
            app:destination="@+id/action_flow_step_one_dest_to_flow_step_one_dest2"></action>
    </fragment>
</navigation>